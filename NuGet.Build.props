<Project>
    <PropertyGroup>
        <Authors>Nexus Mods</Authors>
        <PackageProjectUrl>https://github.com/Nexus-Mods/fomod-installer</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Nexus-Mods/fomod-installer</RepositoryUrl>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageIcon>Nexus-Icon.png</PackageIcon>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="$(MSBuildThisFileDirectory)LICENSE.md">
            <Pack>True</Pack>
            <PackagePath>/</PackagePath>
        </None>
        <None Include="$(MSBuildThisFileDirectory)Nexus-Icon.png">
            <Pack>True</Pack>
            <PackagePath>/</PackagePath>
        </None>
    </ItemGroup>
</Project>