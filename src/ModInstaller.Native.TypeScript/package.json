{
  "name": "fomod-installer-native",
  "version": "0.10.0",
  "description": "Package of native bindings bundled with TS declarations",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "gypfile": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Nexus-Mods/fomod-installer.git"
  },
  "author": "Nexus-Mods",
  "license": "GPL-3.0",
  "homepage": "https://github.com/Nexus-Mods/fomod-installer#readme",
  "bugs": {
    "url": "https://github.com/Nexus-Mods/fomod-installer/issues"
  },
  "scripts": {
    "clean": "node build.js clear",
    "native": "node build.js build-native",
    "build-without-gyp": "node build.js build",
    "build": "node build.js build",
    "build-native": "node build.js build-native",
    "build-napi": "node build.js build-napi",
    "build-webpack": "node build.js build-webpack",
    "build-content": "node build.js build-content",
    "test": "node build.js test",
    "test-build": "node build.js test-build",
    "test-no-build": "pwsh ./commands.ps1 test-no-build",
    "test-ava": "tsc -p tsconfig.test.json && node -e \"require('fs').mkdirSync('dist/build', {recursive:true}); require('fs').copyFileSync('build/Release/modinstaller.node', 'dist/build/modinstaller.node');\" && ava",
    "watch:build": "tsc -p tsconfig.json -w"
  },
  "engines": {
    "node": ">=22"
  },
  "binary": {
    "napi_versions": [
      8
    ]
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "@ava/typescript": "^6.0.0",
    "@types/node": "^22.0.0",
    "ava": "^6.4.1",
    "node-7z": "^3.0.0",
    "node-addon-api": "8.5.0",
    "node-gyp": "10.0.0",
    "node-stream-zip": "^1.15.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "vortex-api": "Nexus-Mods/vortex-api",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "ava": {
    "failFast": false,
    "timeout": "60s",
    "files": [
      "dist/test/**/*.spec.js"
    ],
    "require": [
      "./test/ava-completion-handler.js"
    ]
  }
}
